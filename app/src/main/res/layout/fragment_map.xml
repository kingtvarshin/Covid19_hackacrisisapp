<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:name="com.google.android.gms.maps.MapFragment"
    android:orientation="vertical">
<!--    android:id="@+id/map01">-->

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:id="@+id/lp1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Radius"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radiustxt"
            android:text="1 km"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:gravity="center_horizontal" />

        <SeekBar
            android:id="@+id/radiusbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="1"
            android:min="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Views"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:gravity="center_horizontal" />

        <CheckBox android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="people threats view"
            android:gravity="center_horizontal"/>
        <CheckBox android:id="@+id/v2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="area threats view"
            android:gravity="center_horizontal"/>

        <com.google.android.gms.maps.MapView
            android:id="@+id/map01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="@+id/lp1"
            app:layout_constraintTop_toBottomOf="@+id/lp1" />
    </LinearLayout>

